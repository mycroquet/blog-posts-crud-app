{{#posts}}
    <h1>{{title}}</h1>
    <form action="/{{id}}?_method=DELETE" method="post">
        <a class="waves-effect waves-light btn red accent-4" href="/update/{{id}}">Edit Post</a>
        <button type="submit" class="btn btn-default">Delete Post</button>
    </form>
    <p>
        By {{name}}
    </p>
    <p>
        Posted on {{date_created}}
    </p>
    <p>
        {{body}}
    </p>
{{/posts}}
